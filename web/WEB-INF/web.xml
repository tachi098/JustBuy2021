<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>AdminUserController</servlet-name>
        <servlet-class>com.fpt.controller.admin.AdminUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminBillController</servlet-name>
        <servlet-class>com.fpt.controller.admin.AdminBillController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminProductController</servlet-name>
        <servlet-class>com.fpt.controller.admin.AdminProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestUserController</servlet-name>
        <servlet-class>com.fpt.controller.guest.GuestUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserController</servlet-name>
        <url-pattern>/AdminUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminBillController</servlet-name>
        <url-pattern>/AdminBillController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminProductController</servlet-name>
        <url-pattern>/AdminProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestUserController</servlet-name>
        <url-pattern>/GuestUserController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
